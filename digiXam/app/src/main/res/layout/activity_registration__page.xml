<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to DigiXam"
        android:id="@+id/welcomeRegistration"
        android:layout_marginTop="50sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your name"
        android:id="@+id/nameLabel"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="50sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:ems="10"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email"
        android:inputType="textEmailAddress"
        android:id="@+id/emailLabel"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="50sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:ems="10"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Roll number"
        android:id="@+id/rollNumLabel"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="50sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rollNum"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set a password"
        android:id="@+id/passwordLabel"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="50sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationCompleteButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"/>

</LinearLayout>